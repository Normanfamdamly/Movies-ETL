import os
import csv

# Path to collect data from the Resources folder
wrestling_csv=os.path.join('Resources', 'WWE-Data-2016.csv')

# Define the function and have it accept the 'wrestlerData' as its sole parameter
def print_percentages(wrester_data):
    name = str(wrestler_data[0])
    wins = int(wrestler_data[1])
    losses= int(wrestler_data[2])
    draws=(wrester_data[3])
    
    
# Find the total number of matches wrestled
total_matches = wins + losses + draws

# Find the percentage of matches won
win_percentage = (wins / total_mathes) * 100

# Find the percentage of matches lost
losses_percentage = (losses / total_mathes) * 100
# Find the percentage of matches drawn
draws_percentage = (draws / total_mathes) * 100

# Print out the wrestler's name and their percentage stats
print(f"Stats for: {name}")
print(f"Win Percentage: {win_percentage}")
print(f"Loss Percentage: {loss_percentage}")
print(f"Draw Percentage: {draw_percentage}")

# Read in the CSV file
with open(wrestling_csv, 'r') as csvfile:

    # Split the data on commas
    csvreader = csv.reader(csvfile, delimiter=',')

    # Prompt the user for what wrestler they would like to search for
    name_to_check = input("What wrestler do you want to look for? ")

    # Loop through the data
    for row in csvreader:

        # If the wrestler's name in a row is equal to that which the user input, run the 'print_percentages()' function
        if(name_to_check == row[0]):
            print_percentages(row)
